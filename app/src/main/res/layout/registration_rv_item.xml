<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idTVSub1"
            android:layout_width="7dp"
            android:layout_height="50dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:text="Subject:"
            android:textColor="@color/black" />


        <!--text view for our course name-->
        <TextView
            android:id="@+id/idTVSub"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:padding="3dp"
            android:text="Subject"
            android:textColor="@color/black" />


        <!--Text view for showing the options menu-->
        <TextView
            android:id="@+id/recyclerMenu"
            android:layout_weight="2"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="â‹®"
            android:textAppearance="?android:textAppearanceLarge" />

        <!--text view for our course tracks
        <TextView
            android:id="@+id/idTVMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Message"
            android:textColor="@color/black" />-->




        <!--Image view for our course duration
        <ImageView
            android:id="@+id/idTVImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Image"
            android:textColor="@color/black" />-->


        <!--text view for our course description
        <TextView
            android:id="@+id/idTVSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Signature"
            android:textColor="@color/black" />-->

    </LinearLayout>


</androidx.cardview.widget.CardView>