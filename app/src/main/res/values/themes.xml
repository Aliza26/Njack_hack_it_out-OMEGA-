<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDFPencil" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <!-- Customize your theme here. -->

    <style name="ThemeLight" parent="@style/RTE_ThemeLight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>

        <item name="rte_icMenuLoad">@drawable/ic_menu_load_light</item>

        <item name="alertDialogTheme">@style/Theme_Dialog_Light</item>
    </style>


    <style name="ThemeDark" parent="@style/RTE_ThemeDark">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>

        <item name="rte_icMenuLoad">@drawable/ic_menu_load_dark</item>

        <item name="alertDialogTheme">@style/Theme_Dialog_Dark</item>
    </style>


    <style name="Theme_Dialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple_500</item>
    </style>


    <style name="Theme_Dialog_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/purple_700</item>
    </style>


</resources>